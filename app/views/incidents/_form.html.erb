<%= form_for(@incident, html: { class: "form-horizontal", role: "form" }) do |f| %>
  <div class="form-group">
    <%= f.label :student, 'Estudante', class: "col-sm-2 control-label" %>
    <div class="col-sm-5">
      <%= f.autocomplete_field :student_id, autocomplete_student_name_school_performaces_path, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :date_incident, 'Data ocorrência', class: "col-sm-2 control-label" %>
    <div class="col-sm-5">
      <%= f.text_field :date_incident, class: "form-control datepicker", value: @incident.date_insident_format %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :description, 'Descrição', class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_area :description, class: "form-control wysihtml5" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :soluction, 'Solução', class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_area :soluction, class: "form-control wysihtml5" %>
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-5">
      <%= f.submit class: "btn btn-primary" %>
    </div>
  </div>
<% end %>
