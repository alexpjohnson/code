<div class="subtitle-list page-header">
  <%= link_to new_school_performace_path, class: 'btn btn-primary' do %>
    <span class="glyphicon glyphicon-plus"></span> Novo desempenho escolar
  <% end %>
  <h1>Lista de desempenhos escolares</h1>
</div>

<div class="text-right">
  <form class="navbar-form" role="search">
    <div class="form-group">
      <input name="search" type="text" value="<%= params[:search] %>"class="form-control" placeholder="Buscar">
    </div>
    <button type="submit" class="btn btn-primary">Buscar</button>
  </form>
</div>

<div class="table-responsive">
  <table class="table table-striped table-bordered table-hover">
    <thead>
      <tr>
        <th class="text-center">ID</th>
        <th>Estudante</th>
        <th>Período</th>
        <th class="text-center">Ações</th>
      </tr>
    </thead>

    <tbody>
      <%= content_tag_for(:tr, @school_performaces) do |school_performace| %>
        <td class="text-center"><%= school_performace.id %></td>
        <td><%= school_performace.student.name %></td>
        <td><%= school_performace.sdate %> à <%= school_performace.fdate %></td>
        <td class="text-center">
          <%= link_to 'Visualizar', school_performace, class: "btn btn-primary btn-xs" %>
          <%= link_to 'Editar', edit_school_performace_path(school_performace), class: "btn btn-primary btn-xs"%>
          <%= link_to 'Excluir', school_performace, method: :delete, data: { confirm: 'Deseja realmente excluir?' }, class: "btn btn-danger btn-xs" %>
        </td>
      <% end %>
    </tbody>
  </table>
  <%= paginate @school_performaces %>
</div>
